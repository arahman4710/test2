<h1>Listing hotels</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Rating</th>
    <th>Hotels combined</th>
    <th>Filename</th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td><%=h hotel.name %></td>
    <td><%=h hotel.address %></td>
    <td><%=h hotel.city_id %></td>
    <td><%=h hotel.latitude %></td>
    <td><%=h hotel.longitude %></td>
    <td><%=h hotel.rating %></td>
    <td><%=h hotel.hotels_combined_id %></td>
    <td><%=h hotel.filename %></td>
    <td><%= link_to 'Show', hotel %></td>
    <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
    <td><%= link_to 'Destroy', hotel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New hotel', new_hotel_path %>