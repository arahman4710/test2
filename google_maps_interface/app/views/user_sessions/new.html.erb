<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%=link_to "Forgot your password?", :controller => 'password_resets', :action => 'new'   %>
    
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>


