<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
<p>
<%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %>
</p>
<div id='cityuser_children'>
  <% f.fields_for :cityusers do |cityuser_form| %>
    <%= render :partial => 'cityuser', :locals => { :f => cityuser_form } %>
  <% end %>
</div>

<p>
  <%= add_child_link 'Add City', 'cityuser', f %>
</p>

<p><%= f.submit "Submit" %></p>
<% end %>
